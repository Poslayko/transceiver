[
    {transceiver, [
        {topic_sub_register, <<"register">>},
        {topic_sub_event, <<"event/telebot">>},
	{start_options_mqtt, [{clientid, <<"transceiver">>}, {username, <<"transceiver">>}, {keepalive, 10000000}]},
	{qos, 2}
    ]},
    {lager, [
        {handlers, [
            {lager_console_backend, [{level, debug}]},
            {lager_file_backend, [
                {file, "log/pipeline_error.log"},
                {level, error},
                {size, 1073741824}, %% 1Gb
                {date, "$D0"},
                {count, 20}
            ]},
            {lager_file_backend, [
                {file, "log/pipeline_warning.log"},
                {level, warning},
                {size, 1073741824}, %% 1Gb
                {date, "$D0"},
                {count, 20}
            ]},
            {lager_file_backend, [
                {file, "log/pipeline_info.log"},
                {level, info},
                {size, 1073741824}, %% 1Gb
                {date, "$D0"},
                {count, 7}
            ]},
            {lager_file_backend, [
                {file, "log/pipeline_debug.log"},
                {level, debug},
                {size, 1073741824}, %% 1Gb
                {date, "$D0"},
                {count, 2}
            ]}
        ]},
        {colored, true},
        %% Whether to write a crash log, and where.
        %% Commented/omitted/undefined means no crash logger.
        {crash_log, "log/pipeline_crash.log"},
        %% Maximum size of the crash log in bytes, before its rotated, set
        %% to 0 to disable rotation - default is 0
        {crash_log_size, 10485760},
        %% What time to rotate the crash log - default is no time
        %% rotation.
        {crash_log_date, "$D0"},
        {error_logger_hwm, 400}
    ]}
].
